# Copy this file to .env and update with your actual values
# Environment Variables for Placement Expo

# Database Configuration (for production)
DATABASE_URL=jdbc:postgresql://localhost:5432/placement_expo
DATABASE_USERNAME=placement_user
DATABASE_PASSWORD=your_secure_password_here

# JWT Security (Generate a secure 256-bit key)
JWT_SECRET=placement-expo-jwt-secret-key-very-long-and-secure-for-production-use-minimum-256-bits
JWT_EXPIRATION=86400000

# Appwrite Configuration
APPWRITE_ENDPOINT=https://nyc.cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=6894d20300386b659e32

# CORS Configuration (update with your domain)
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:8081,http://127.0.0.1:8080,http://127.0.0.1:8081

# File Upload Directory
UPLOAD_DIR=uploads

# Optional: Sentry Error Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Server Configuration
PORT=8081
ENVIRONMENT=development
