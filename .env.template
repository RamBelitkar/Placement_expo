# Environment Variables Template for Placement Expo
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=jdbc:postgresql://localhost:5432/placement_expo
DATABASE_USERNAME=placement_user
DATABASE_PASSWORD=your_secure_password_here

# JWT Security
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-here-minimum-256-bits
JWT_EXPIRATION=86400000

# Appwrite Configuration
APPWRITE_ENDPOINT=https://nyc.cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_appwrite_project_id_here

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload
UPLOAD_DIR=/app/uploads

# Sentry Error Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# SSL Configuration (Optional)
SSL_ENABLED=false
SSL_KEYSTORE=
SSL_KEYSTORE_PASSWORD=
SSL_KEYSTORE_TYPE=PKCS12

# Server Configuration
PORT=8080
ENVIRONMENT=production
